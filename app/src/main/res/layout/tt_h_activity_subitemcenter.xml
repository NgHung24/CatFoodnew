<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".adapter.subitemcenter">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#1d3557">

        <ImageButton
                android:id="@+id/imageButton_subitemcenter_QuayLai"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:background="#1d3557"
                android:padding="5dp"
                android:src="@drawable/iconexit"/>

        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5.5"
                android:text="QUAY LẠI"
                android:layout_gravity="center_vertical"
                android:textSize="20sp"
                android:textColor="@color/white"></TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_subitemcenter_AnhSP"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:scaleType="fitXY"
        android:src="@drawable/vd" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView_subitemcenter_TenSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="27dp"
            android:textStyle="bold"
            android:text="Tên sản phẩm" />

        <TextView
            android:id="@+id/textView_subitemcenter_GIA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="20000"
            android:textColor="#FA0A0A"
            android:textSize="20dp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Số lượng:" />

            <EditText
                android:id="@+id/ed_soluong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20dp"></EditText>
            <TextView

                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:text="Số mua"/>

            <EditText
                android:id="@+id/editText_subitemcenter_SoMua"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:text="1"
                android:textAlignment="textEnd"
                android:textColor="#FA0A0A"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
        <TextView
            android:id="@+id/textView_subitemcenter_LoaiSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Thức ăn khô" />
        <TextView
            android:id="@+id/textView_subitemcenter_ThongTinSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:text="Xin chào ác thứ"></TextView>

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button
                android:id="@+id/Button_subitemcenter_ThemGioHang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm giỏ hàng"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>